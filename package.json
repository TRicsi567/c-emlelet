{
  "name": "c-emlelet",
  "version": "0.1.0",
  "private": true,
  "contributors": [
    {
      "name": "Lakatos Hunor"
    },
    {
      "name": "Nagy Ákos"
    },
    {
      "name": "Supik Csanád Ferenc"
    },
    {
      "name": "Török Richárd"
    }
  ],
  "dependencies": {
    "@material-ui/core": "^4.8.3",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/styles": "^4.8.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.1",
    "@testing-library/user-event": "^7.2.1",
    "axios": "^0.19.2",
    "history": "^4.10.1",
    "node-sass": "^4.13.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-lines-ellipsis": "^0.14.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:prod": "npm run build && cd ./server && npm start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "test:ci": "react-scripts test --coverage",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test -- --watchAll=false",
      "pre-push": "npm run build && npm test -- --watchAll=false"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "jsxSingleQuote": true,
    "trailingComma": "none",
    "arrowParens": "always"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --write",
      "eslint src/**/*.js"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/view/**/*.{js, jsx}",
      "src/state/**/*.{js, jsx}",
      "!**/assets/**",
      "!**/node_modules/**"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  }
}
